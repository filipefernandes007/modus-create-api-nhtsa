{
    "name": "filipefernandes007/modus-create-api-exercise",
    "description": "An API exercise.",
    "keywords": ["modus-create", "rest", "api", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Filipe Fernandes",
            "email": "filipefernandes007@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.10",
        "monolog/monolog": "^1.17",
        "slim/php-view": "^2.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "post-install-cmd": "php -S localhost:8080 -t public"
    }

}
